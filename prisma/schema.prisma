generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dialect {
  key        String       @id
  name       String
  Vocabulary Vocabulary[]
  Lexicon    Lexicon[]
}

model PartOfSpeech {
  code       String       @id
  name       String
  Vocabulary Vocabulary[]
  Lexicon    Lexicon[]
}

model Root {
  term    String    @id
  Lexicon Lexicon[]
}

model Lexicon {
  term         String        @id
  dialect      String?
  standard     String?
  root         String?
  partOfSpeech String?
  english      String
  comment      String?
  Dialect      Dialect?      @relation(fields: [dialect], references: [key], onDelete: Cascade)
  PartOfSpeech PartOfSpeech? @relation(fields: [partOfSpeech], references: [code], onDelete: Cascade)
  Root         Root?         @relation(fields: [root], references: [term], onDelete: Cascade)
}

model Vocabulary {
  id           Int           @id @default(autoincrement())
  malagasy     String
  dialect      String?
  partOfSpeech String?
  english      String
  comment      String?
  Dialect      Dialect?      @relation(fields: [dialect], references: [key], onDelete: Cascade)
  PartOfSpeech PartOfSpeech? @relation(fields: [partOfSpeech], references: [code], onDelete: Cascade)
}
